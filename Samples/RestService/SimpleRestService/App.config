<?xml version="1.0" encoding="utf-8"?>

<configuration>

    <system.serviceModel>
        <services>
            <service name="SimpleRestService.SampleWebService" behaviorConfiguration="Default">
                <host>
                    <baseAddresses>
                        <add baseAddress="http://192.168.1.10:9092/webhost" />
                    </baseAddresses>
                </host>
                <endpoint binding="webHttpBinding" behaviorConfiguration="Web"
                          contract="Nelibur.ServiceModel.Contracts.IRestService" />
            </service>
        </services>
        <behaviors>
            <serviceBehaviors>
                <behavior name="Default">
                    <serviceMetadata httpGetEnabled="true" />
                </behavior>
            </serviceBehaviors>
            <endpointBehaviors>
                <behavior name="Default">
                </behavior>
                <behavior name="Web">
                    <webHttp />
                </behavior>
            </endpointBehaviors>
        </behaviors>
    </system.serviceModel>

    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
</configuration>